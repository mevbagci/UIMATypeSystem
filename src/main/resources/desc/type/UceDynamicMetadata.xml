<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <name>UceDynamicMetadata</name>
    <description>For UCE, we don't know what kind of data we are importing. Consequently, we need some form of dynamic properties that hold additional data according to the corpus, that is interchangable and usable for filtering for example. This typesystem was created for this.</description>
    <version>1.0</version>
    <vendor>Text Technology Lab</vendor>
  <imports>
    <import name="desc.type.LexicalUnits_customized"/>
  </imports>
  <types>
    <typeDescription>
      <name>org.texttechnologylab.annotation.uce.Metadata</name>
      <description>Dynamic metadata triplets, consisting of a key, a value and the type modelling the value.</description>
      <supertypeName>uima.tcas.Annotation</supertypeName>
      <features>
        <featureDescription>
          <name>key</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>value</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>valueType</name>
          <description/>
          <rangeTypeName>org.texttechnologylab.annotation.uce.MetadataValueType</rangeTypeName>
        </featureDescription>
        <featureDescription>
          <name>comment</name>
          <description/>
          <rangeTypeName>uima.cas.String</rangeTypeName>
        </featureDescription>
      </features>
    </typeDescription>
    <typeDescription>
      <name>org.texttechnologylab.annotation.uce.MetadataValueType</name>
      <description>An ENUM description of the valueType field of the respective uce.Metadata typesystem.</description>
      <supertypeName>uima.cas.String</supertypeName>
      <allowedValues>
        <value>
          <string>STRING</string>
          <description>Text, variable fields, ...</description>
        </value>
        <value>
          <string>NUMBER</string>
          <description>Integers, Floats, Doubles...</description>
        </value>
        <value>
          <string>JSON</string>
          <description>Raw JSON String, containing unlimited fields, lists and objects.</description>
        </value>
        <value>
          <string>DATE</string>
          <description>YYYY/MM/DD or DDDD.MM.YYYY</description>
        </value>
        <value>
          <string>URL</string>
          <description>A link to an external resource.</description>
        </value>
        <value>
          <string>ENUM</string>
          <description>Category, Type, Dropdown lists...</description>
        </value>
      </allowedValues>
    </typeDescription>
  </types>
</typeSystemDescription>
