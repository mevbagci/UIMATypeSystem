<?xml version="1.0" encoding="UTF-8"?>
<typeSystemDescription xmlns="http://uima.apache.org/resourceSpecifier">
    <name>DocumentLinkTypeSystem</name>
    <description>Typesystem for representing elements (UIMA Documents, Annotations, etc.) as graph</description>
    <version>1.0</version>
    <vendor>Text Technology Lab</vendor>
    <types>
        <!-- common Link supertype -->
        <typeDescription>
            <name>org.texttechnologylab.annotation.link.Link</name>
            <description>Base type for unidirectional links between entities</description>
            <supertypeName>uima.tcas.Annotation</supertypeName>
            <features>
                <featureDescription>
                    <name>linkType</name>
                    <description>Type of the link</description>
                    <rangeTypeName>uima.cas.String</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>linkId</name>
                    <description>Id of a Link</description>
                    <rangeTypeName>uima.cas.Long</rangeTypeName>
                </featureDescription>
            </features>
        </typeDescription>

        <!-- DocLink subtype -->
        <typeDescription>
            <name>org.texttechnologylab.annotation.link.DLink</name>
            <description>Annotation represents a (unidirectional) Link between two Documents</description>
            <supertypeName>org.texttechnologylab.annotation.link.Link</supertypeName>
            <features>
                <featureDescription>
                    <name>from</name>
                    <description>from (document_id) to (document_id)</description>
                    <rangeTypeName>uima.cas.String</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>to</name>
                    <description>from (document_id) to (document_id)</description>
                    <rangeTypeName>uima.cas.String</rangeTypeName>
                </featureDescription>
            </features>
        </typeDescription>

        <!-- AnnotationLink subtype -->
        <typeDescription>
            <name>org.texttechnologylab.annotation.link.ALink</name>
            <description>Annotation represents a (unidirectional) Link between two Annotations</description>
            <supertypeName>org.texttechnologylab.annotation.link.Link</supertypeName>
            <features>
                <featureDescription>
                    <name>from</name>
                    <description>from (annotation) to (annotation)</description>
                    <rangeTypeName>uima.tcas.Annotation</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>to</name>
                    <description>from (annotation) to (annotation)</description>
                    <rangeTypeName>uima.tcas.Annotation</rangeTypeName>
                </featureDescription>
            </features>
        </typeDescription>

        <!-- AnnotationDocumentLink subtype -->
        <typeDescription>
            <name>org.texttechnologylab.annotation.link.ADLink</name>
            <description>Annotation represents a (unidirectional) Link between another Annotation and a Document</description>
            <supertypeName>org.texttechnologylab.annotation.link.Link</supertypeName>
            <features>
                <featureDescription>
                    <name>from</name>
                    <description>from (annotation) to (document_id)</description>
                    <rangeTypeName>uima.tcas.Annotation</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>to</name>
                    <description>from (annotation) to (document_id)</description>
                    <rangeTypeName>uima.cas.String</rangeTypeName>
                </featureDescription>
            </features>
        </typeDescription>

        <!-- DocumentAnnotationLink subtype -->
        <typeDescription>
            <name>org.texttechnologylab.annotation.link.DALink</name>
            <description>Annotation represents a (unidirectional) Link between a Document and another Annotations</description>
            <supertypeName>org.texttechnologylab.annotation.link.Link</supertypeName>
            <features>
                <featureDescription>
                    <name>from</name>
                    <description>from (document_id) to (annotation)</description>
                    <rangeTypeName>uima.cas.String</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>to</name>
                    <description>from (document_id) to (annotation)</description>
                    <rangeTypeName>uima.tcas.Annotation</rangeTypeName>
                </featureDescription>
            </features>
        </typeDescription>

        <!-- Offset Link -->
        <typeDescription>
            <name>org.texttechnologylab.annotation.link.OLink</name>
            <description>Annotation represents a (unidirectional) Link between a Document and another Document, linking offsets (can be in same Doc)</description>
            <supertypeName>org.texttechnologylab.annotation.link.Link</supertypeName>
            <features>
                <featureDescription>
                    <name>from</name>
                    <description>from (document_id) to (document_id)</description>
                    <rangeTypeName>uima.cas.String</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>to</name>
                    <description>from (document_id) to (document_id)</description>
                    <rangeTypeName>uima.cas.String</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>fromBegin</name>
                    <description>Offset (begin) in (from) Doc</description>
                    <rangeTypeName>uima.cas.Integer</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>fromEnd</name>
                    <description>Offset (end) in (from) Doc</description>
                    <rangeTypeName>uima.cas.Integer</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>toBegin</name>
                    <description>Offset (begin) in (to) Doc</description>
                    <rangeTypeName>uima.cas.Integer</rangeTypeName>
                </featureDescription>
                <featureDescription>
                    <name>toEnd</name>
                    <description>Offset (end) in (to) Doc</description>
                    <rangeTypeName>uima.cas.Integer</rangeTypeName>
                </featureDescription>
            </features>
        </typeDescription>
    </types>
</typeSystemDescription>